<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddEventActivity">

    <Button
        android:id="@+id/buttonValidate"
        android:onClick="addEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:imeOptions="actionDone"/>

    <TextView
        android:id="@+id/name_event"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Name of event : "/>

    <EditText
        android:id="@+id/input_event_name"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/name_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/event_date"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_event_name"
        android:text="Date : "/>

    <EditText
        android:id="@+id/input_event_date"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/event_date"
        app:layout_constraintTop_toBottomOf="@id/name_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"/>

    <TextView
        android:id="@+id/event_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Hour : "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_event_date" />

    <EditText
        android:id="@+id/input_event_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:minWidth="150dp"
        app:layout_constraintStart_toEndOf="@id/event_hour"
        app:layout_constraintTop_toBottomOf="@id/input_event_date" />

    <TextView
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Location : "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_event_date" />

    <EditText
        android:id="@+id/input_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="100dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:minWidth="150dp"
        app:layout_constraintStart_toEndOf="@id/event_hour"
        app:layout_constraintTop_toBottomOf="@id/input_event_date" />

    <TextView
        android:id="@+id/event_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="Theme : "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_event_date" />

    <EditText
        android:id="@+id/input_event_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="160dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:minWidth="150dp"
        app:layout_constraintStart_toEndOf="@id/event_hour"
        app:layout_constraintTop_toBottomOf="@id/input_event_date" />

    <TextView
        android:id="@+id/event_nbParticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:text="Number of participant : "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_event_date" />

    <EditText
        android:id="@+id/input_event_nbParticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="244dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:minWidth="150dp"
        app:layout_constraintStart_toEndOf="@id/event_hour"
        app:layout_constraintTop_toBottomOf="@id/input_event_date" />
</androidx.constraintlayout.widget.ConstraintLayout>